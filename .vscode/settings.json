{
    // YAML: 使用 GitHub Actions schema 做自動完成與驗證
    "yaml.schemas": {
      "https://json.schemastore.org/github-workflow.json": "file:.github/workflows/*.{yml,yaml}"
    },
  
    // 編輯體驗
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
  
    // Prettier 為預設 formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  
    // ESLint：前後端皆啟用（有就跑）
    "eslint.workingDirectories": [
      { "directory": "frontend", "changeProcessCWD": true },
      { "directory": "backend",  "changeProcessCWD": true }
    ],
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "vue", "yaml", "json"],
  
    // 專案語言偏好
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative"
  }
  